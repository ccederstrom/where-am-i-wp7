<UserControl x:Class="GPS.Controls.SpeedControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Tap="LayoutRoot_Tap">
        <Grid Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Name="txt_speed" Text="0" TextWrapping="NoWrap" FontSize="100" TextAlignment="Center"  Width="auto" Margin="0,50,0,0" />
        </Grid>
        <TextBlock Height="Auto" Name="txt_unit" Text="miles / hour"   TextWrapping="Wrap" Style="{StaticResource PhoneTextLargeStyle}" Foreground="{StaticResource PhoneAccentBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />        
    </Grid>
</UserControl>
